<div class="row content">
  <div class="col-md-8">
    <%= post.body %>
    <small>- <%= time_ago_in_words(post.created_at) %> ago</small>
  </div>
  <div class="col-md-4">
    <% if can? :update, post %>
      <%= link_to "Edit Post", edit_post_path(post.id), class: 'btn btn-sm btn-default' %>
    <% end %>
    <% if can? :delete, post %>
      <%= link_to "Delete Post", post_path(post.id), method: :delete, class: 'btn btn-sm btn-default' %>
    <% end %>
  </div>
</div>
